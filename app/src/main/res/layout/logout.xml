<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    tools:context=".LogoutFragment"
    android:background="@color/backgroundColor"
    android:descendantFocusability="beforeDescendants"
    android:focusableInTouchMode="true">

    <ImageView
        android:id="@+id/logout_logo"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:src="@drawable/autodoor_logo"
        android:layout_centerHorizontal="true"
        />
    <TextView
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/title_logout"
        android:textSize="@dimen/text_normal"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/logout_logo"

        />

    <Button android:id="@+id/logout_button" style="?android:textAppearanceSmall"
        android:layout_width="match_parent" android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/text_view_margin" android:text="@string/logout_button"
        android:textStyle="bold"
        android:textColor="@color/textColorPrimary"
        android:background="@color/colorButton"
        android:layout_centerInParent="true"

        />

</RelativeLayout>